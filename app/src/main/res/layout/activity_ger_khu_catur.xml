<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg1"
    tools:context=".GerKhuCatur">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginBottom="30dp"
        android:background="@drawable/nav"
        android:orientation="horizontal">
        <Button
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:background="@drawable/bt_back"
            android:onClick="back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:fontFamily="@font/babyblue"
            android:textColor="#fff"
            android:text="Gerakan Khusus"
            android:layout_gravity="center" />
    </LinearLayout>

            <Button
                android:layout_width="350dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:textSize="30sp"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:background="@drawable/bt_button1"
                android:onClick="rokade"
                android:text="Gerakan Rokade"/>
            <Button
                android:layout_width="350dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:textSize="30sp"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:background="@drawable/bt_button1"
                android:onClick="enpassant"
                android:text="Gerakan En Passant"/>
            <Button
                android:layout_width="350dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:textSize="30sp"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:background="@drawable/bt_button1"
                android:onClick="promosi"
                android:text="Gerakan Promosi"/>
            <Button
                android:layout_width="350dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:textSize="30sp"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:background="@drawable/bt_button1"
                android:onClick="sekak"
                android:text="Gerakan Sekak"/>

</LinearLayout>