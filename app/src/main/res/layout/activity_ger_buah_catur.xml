<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg1"
    tools:context=".GerBuahCatur">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/nav"
        android:orientation="horizontal">
        <Button
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:background="@drawable/bt_back"
            android:onClick="back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:fontFamily="@font/babyblue"
            android:textColor="#fff"
            android:text="Gerakan Buah Catur"
            android:layout_gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_margin="15dp"
                android:textStyle="bold"
                android:text="Raja"
                android:onClick="raja"
                android:gravity="center|bottom"
                android:background="@drawable/buah_raja"
                style="@style/Widget.AppCompat.Button" />

            <Button
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_margin="15dp"
                android:textStyle="bold"
                android:text="Menteri"
                android:onClick="menteri"
                android:gravity="center|bottom"
                android:background="@drawable/buah_menteri"
                style="@style/Widget.AppCompat.Button" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_margin="15dp"
                android:textStyle="bold"
                android:text="Benteng"
                android:onClick="benteng"
                android:gravity="center|bottom"
                android:background="@drawable/buah_benteng"
                style="@style/Widget.AppCompat.Button" />

            <Button
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_margin="15dp"
                android:textStyle="bold"
                android:text="Gajah"
                android:onClick="gajah"
                android:gravity="center|bottom"
                android:background="@drawable/buah_gajah"
                style="@style/Widget.AppCompat.Button" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_margin="15dp"
                android:textStyle="bold"
                android:text="Kuda"
                android:onClick="kuda"
                android:gravity="center|bottom"
                android:background="@drawable/buah_kuda"
                style="@style/Widget.AppCompat.Button" />

            <Button
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_margin="15dp"
                android:textStyle="bold"
                android:text="Bidak"
                android:onClick="bidak"
                android:gravity="center|bottom"
                android:background="@drawable/buah_bidak"
                style="@style/Widget.AppCompat.Button" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
